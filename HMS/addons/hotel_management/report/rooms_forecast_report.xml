<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Rooms Forecast Report Action -->
    <record id="action_report_rooms_forecast" model="ir.actions.report">
        <field name="name">Rooms Forecast Report</field>
        <field name="model">rooms.forecast.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hotel_management.report_rooms_forecast</field>
        <field name="report_file">hotel_management.report_rooms_forecast</field>
        <field name="binding_model_id" ref="model_rooms_forecast_report"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Rooms Forecast Report Template -->
    <template id="report_rooms_forecast">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Rooms Forecast Report</h2>
                    <br/>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Sl No.</th>
                                <th>Hotel</th>
                                <th>Report Date</th>
                                <th>Room Type</th>
                                <th>Total Rooms</th>
                                <th>Exp. Arrivals</th>
                                <th>Exp. Departures</th>
                                <th>In House</th>
                                <th>Exp. Arrivals Adults</th>
                                <th>Exp. Arrivals Children</th>
                                <th>Exp. Arrivals Infants</th>
                                <th>Exp. Departures Adults</th>
                                <th>Exp. Departures Children</th>
                                <th>Exp. Departures Infants</th>
                                <th>In House Adults</th>
                                <th>In House Children</th>
                                <th>In House Infants</th>
                                <th>In House Total</th>
                                <th>Available</th>
                                <th>Exp. Occupied Rate (%)</th>
                                <th>Out of Order</th>
                                <th>Free to Sell</th>
                                <th>Sort Order</th>
                                <th>Out of Service</th>
                                <th>Expected In House</th>
                                <th>Exp. In House Adults</th>
                                <th>Exp. In House Children</th>
                                <th>Exp. In House Infants</th>
                                <th>Available Rooms</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="o" t-foreach-index="i">
                                <tr>
                                    <td><t t-esc="(i or 0) + 1"/></td>
                                    <td><t t-esc="o.company_id.name or ''"/></td>
                                    <td><t t-esc="o.report_date.strftime('%Y-%m-%d') if o.report_date else ''"/></td>
                                    <td><t t-esc="o.room_type_name or ''"/></td>
                                    <td><t t-esc="o.total_rooms or 0"/></td>
                                    <td><t t-esc="o.expected_arrivals or 0"/></td>
                                    <td><t t-esc="o.expected_departures or 0"/></td>
                                    <td><t t-esc="o.in_house or 0"/></td>
                                    <td><t t-esc="o.expected_arrivals_adult_count or 0"/></td>
                                    <td><t t-esc="o.expected_arrivals_child_count or 0"/></td>
                                    <td><t t-esc="o.expected_arrivals_infant_count or 0"/></td>
                                    <td><t t-esc="o.expected_departures_adult_count or 0"/></td>
                                    <td><t t-esc="o.expected_departures_child_count or 0"/></td>
                                    <td><t t-esc="o.expected_departures_infant_count or 0"/></td>
                                    <td><t t-esc="o.in_house_adult_count or 0"/></td>
                                    <td><t t-esc="o.in_house_child_count or 0"/></td>
                                    <td><t t-esc="o.in_house_infant_count or 0"/></td>
                                    <td><t t-esc="o.in_house_total or 0"/></td>
                                    <td><t t-esc="o.available or 0"/></td>
                                    <td><t t-esc="o.expected_occupied_rate or 0"/></td>
                                    <td><t t-esc="o.out_of_order or 0"/></td>
                                    <td><t t-esc="o.free_to_sell or 0"/></td>
                                    <td><t t-esc="o.sort_order or 0"/></td>
                                    <td><t t-esc="o.out_of_service or 0"/></td>
                                    <td><t t-esc="o.expected_in_house or 0"/></td>
                                    <td><t t-esc="o.expected_in_house_adult_count or 0"/></td>
                                    <td><t t-esc="o.expected_in_house_child_count or 0"/></td>
                                    <td><t t-esc="o.expected_in_house_infant_count or 0"/></td>
                                    <td><t t-esc="o.available_rooms or 0"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
