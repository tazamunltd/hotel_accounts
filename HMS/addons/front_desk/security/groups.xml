<odoo>
    <record id="hotel_management_rule_company_restriction_ooo_front_desk" model="ir.rule">
        <field name="name">Hotel Management: Restrict module data by company Out Of Order</field>
        <field name="model_id" ref="front_desk.model_out_of_order_management_front_desk"/>
        <field name="domain_force">[('company_id', '=', company_id),]</field>
        <field name="global" eval="True"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
