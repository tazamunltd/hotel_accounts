<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_reservation_profile" model="ir.actions.act_window">
        <field name="name">Reservation Profiles</field>
        <field name="res_model">reservation.profile</field>
        <field name="view_mode">form</field>
    </record>

    <record id="action_reservation_profile_main" model="ir.actions.act_window">
        <field name="name">Reservation Profiles Main</field>
        <field name="res_model">reservation.profile.main</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_reservation_group_profile" model="ir.actions.act_window">
        <field name="name">Reservation Group Profiles</field>
        <field name="res_model">reservation.group.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first reservation group profile
            </p>
        </field>
    </record>

    <!-- Action for Reservation Main -->
    <record id="action_reservation_reservation_main" model="ir.actions.act_window">
        <field name="name">Reservations</field>
        <field name="res_model">reservation.reservation.main</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first reservation
            </p>
        </field>
    </record>

    <!-- Action for Traces -->
    <record id="action_reservation_trace" model="ir.actions.act_window">
        <field name="name">Traces</field>
        <field name="res_model">reservation.trace</field>
        <field name="view_mode">tree,form</field>
    </record>


