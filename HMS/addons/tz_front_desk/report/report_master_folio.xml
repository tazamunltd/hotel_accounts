    <template id="report_master_folio">
        <t t-call="web.html_container">
            <t t-set="doc" t-value="docs[0]"/>
            <t t-call="web.external_layout">

                <!-- Folio Header -->
                <div class="row" style="margin-bottom: 15px;">
                    <!-- Left Side (Start-aligned) -->
                    <div class="col-6">
                        <strong>Folio:</strong>
                        <span t-esc="doc.folio_number"/>
                        <br/>
                        <strong>Room:</strong>
                        <span t-esc="doc.room_id.name"/>
                        (<span t-esc="doc.room_type_id.room_type"/>)
                        <br/>
                        <strong>Guest:</strong>
                        <span t-esc="doc.guest_id.name"/>
                        <br/>
                        <strong>Check-in:</strong>
                        <span t-field="doc.check_in" t-options="{'format': 'dd/MM/yyyy'}"/>
                        <br/>
                        <strong>Check-out:</strong>
                        <span t-field="doc.check_out" t-options="{'format': 'dd/MM/yyyy'}"/>
                    </div>

                    <!-- Right Side (End-aligned with text-end) -->
                    <div class="col-6 text-end">
                        <strong>Group:</strong>
                        <span t-esc="doc.group_id.name"/>
                        <br/>
                        <strong>VAT:</strong>
                        <span t-esc="doc.company_vat"/>
                        <br/>
                        <strong>Bill Number:</strong>
                        <span t-esc="doc.bill_number"/>
                        <br/>
                        <strong>Rooming Info:</strong>
                        <span t-esc="doc.rooming_info"/>
                        <br/>
                        <strong>Currency:</strong>
                        <span t-esc="doc.currency_id.name"/>
                    </div>
                </div>

                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th class="text-right">Date</th>
                                <th class="text-right">Time</th>
                                <th>Description</th>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                                <th class="text-right">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="folio_items"
                               t-value="docs.filtered(lambda r: r.folio_id.id == doc.folio_id.id)"/>
                            <t t-foreach="folio_items" t-as="item">
                                <tr>
                                    <td class="text-right">
                                        <span t-esc="item.date"/>
                                    </td>
                                    <td>
                                        <span t-esc="item.report_time"/>
                                    </td>
                                    <td>
                                        <span t-esc="item.item_description"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="round(item.total_debit, 2)"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="round(item.total_credit, 2)"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="round(item.total_balance, 2)"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <!-- Tax Summary Section -->
                <!-- Tax Summary Section - SAFE VERSION -->
                <t t-set="tax_data" t-value="doc.tax_totals or {}"/>
                <t t-set="currency" t-value="doc.currency_id or None"/>

                <!-- Fallback format_amount if not provided -->
                <t t-if="not format_amount">
                    <t t-set="format_amount" t-value="lambda amount, currency: str(amount)"/>
                </t>

                <div class="row mt-4" t-if="tax_data">
                    <div class="col-12">
                        <h4>Tax Summary</h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Safe rendering of tax groups -->
                                <t t-if="tax_data.get('groups_by_subtotal')">
                                    <t t-foreach="tax_data.get('groups_by_subtotal', {}).items()" t-as="subtotal">
                                        <tr class="subtotal-header">
                                            <td colspan="2">
                                                <strong t-esc="subtotal[0] or 'Tax Group'"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="subtotal[1]" t-as="tax_group">
                                            <tr>
                                                <td class="pl-4">
                                                    <span t-esc="tax_group.get('tax_group_name', 'Tax')"/>
                                                    <t t-if="tax_group.get('tax_group_rate')">
                                                        (<span t-esc="tax_group['tax_group_rate']"/>%)
                                                    </t>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="format_amount(round(float(tax_group.get('tax_group_amount', 0.0)), 2), currency)"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>

                                <!-- Totals Section with extra safety checks -->
                                <tr class="border-top">
                                    <td>
                                        <strong>Untaxed Amount</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="format_amount(round(float(tax_data.get('amount_untaxed', 0.0)), 2), currency)"/>
                                    </td>
                                </tr>
                                <tr class="border-top">
                                    <td>
                                        <strong>Total With Tax</strong>
                                    </td>
                                    <td class="text-right">
                                        <strong>
                                            <span t-esc="format_amount(float(tax_data.get('amount_total', 0.0)), currency)"/>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Thank You -->
                <div class="row mt32">
                    <div class="col-12 text-center">
                        <p>
                            <strong>Thank you for your business!</strong>
                        </p>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="action_report_tz_master_folio_new" model="ir.actions.report">
        <field name="name">Master Folio Report</field>
        <field name="model">tz.master.folio</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_file">tz_front_desk.report_folio_summary</field>
        <field name="report_name">tz_front_desk.report_folio_summary</field>
        <field name="print_report_name">'Master Folio - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_tz_master_folio"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_master_folio_new">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="docs[0]"/>
                <div class="page">
                    <div class="header">
                        <h2>Master Folio Report</h2>
                        <h3>
                            <span t-field="doc.name"/>
                        </h3>
                    </div>
                    <!-- Tax Totals Section -->
                    <div class="row mt-4" t-if="doc.tax_totals">
                        <div class="col-12">
                            <h4>Tax Summary</h4>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="tax_data" t-value="doc._get_tax_totals_display()"/>
                                    <t t-if="tax_data and tax_data.get('subtotals')">
                                        <!-- Handle subtotals first -->
                                        <t t-foreach="tax_data['subtotals']" t-as="subtotal">
                                            <tr>
                                                <td colspan="2">
                                                    <strong t-esc="subtotal.get('name', 'Subtotal')"/>
                                                </td>
                                            </tr>
                                            <t t-foreach="subtotal.get('tax_group_data', [])" t-as="tax_group">
                                                <tr>
                                                    <td>
                                                        <span t-esc="tax_group.get('tax_group_name', 'Tax')"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="tax_group.get('tax_group_amount', '0.00')"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>

                                        <!-- Handle groups_by_subtotal if exists -->
                                        <t t-if="tax_data.get('groups_by_subtotal')">
                                            <t t-foreach="tax_data['groups_by_subtotal'].items()" t-as="subtotal">
                                                <tr>
                                                    <td colspan="2">
                                                        <strong t-esc="subtotal[0]"/>
                                                    </td>
                                                </tr>
                                                <t t-foreach="subtotal[1]" t-as="tax_group">
                                                    <tr>
                                                        <td>
                                                            <span t-esc="tax_group.get('tax_group_name', 'Tax')"/>
                                                        </td>
                                                        <td>
                                                            <span t-esc="tax_group.get('tax_group_amount', '0.00')"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>

                                        <!-- Totals -->
                                        <tr>
                                            <td>
                                                <strong>Total With Tax</strong>
                                            </td>
                                            <td>
                                                <span t-esc="tax_data.get('amount_total', '0.00')"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-elif="tax_data">
                                        <!-- Fallback display if no subtotals -->
                                        <tr>
                                            <td>
                                                <strong>Untaxed Amount</strong>
                                            </td>
                                            <td>
                                                <span t-esc="tax_data.get('amount_untaxed', '0.00')"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Total Tax</strong>
                                            </td>
                                            <td>
                                                <span t-esc="tax_data.get('amount_tax', '0.00')"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Total With Tax</strong>
                                            </td>
                                            <td>
                                                <span t-esc="tax_data.get('amount_total', '0.00')"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="2">No tax information available</td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>