<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_tz_master_folio" model="ir.actions.report">
        <field name="name">Master Folio Report</field>
        <field name="model">tz.master.folio.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_file">tz_front_desk.report_master_folio</field>
        <field name="report_name">tz_front_desk.report_master_folio</field>
    </record>


    <template id="report_master_folio">
        <t t-call="web.html_container">
            <t t-set="folio_header" t-value="docs[0]"/>
            <t t-call="web.external_layout">

                <!-- Folio Header -->
                <div class="row" style="margin-bottom: 15px;">
                    <!-- Left Side (Start-aligned) -->
                    <div class="col-6">
                        <strong>Folio:</strong>
                        <span t-esc="folio_header.folio_number"/>
                        <br/>
                        <strong>Room:</strong>
                        <span t-esc="folio_header.room_id.name"/>
                        (<span t-esc="folio_header.room_type_id.room_type"/>)
                        <br/>
                        <strong>Guest:</strong>
                        <span t-esc="folio_header.guest_id.name"/>
                        <br/>
                        <strong>Check-in:</strong>
                        <span t-esc="folio_header.check_in"/>
                        <br/>
                        <strong>Check-out:</strong>
                        <span t-esc="folio_header.check_out"/>
                    </div>

                    <!-- Right Side (End-aligned with text-end) -->
                    <div class="col-6 text-end">
                        <strong>Group:</strong>
                        <span t-esc="folio_header.group_id.name"/>
                        <br/>
                        <strong>VAT:</strong>
                        <span t-esc="folio_header.company_vat"/>
                        <br/>
                        <strong>Bill Number:</strong>
                        <span t-esc="folio_header.bill_number"/>
                        <br/>
                        <strong>Currency:</strong>
                        <span t-esc="folio_header.currency_id.name"/>
                    </div>
                </div>


                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Item Code</th>
                                <th>Description</th>
                                <th class="text-right">First Date</th>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                                <th class="text-right">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="folio_items"
                               t-value="docs.filtered(lambda r: r.folio_id.id == folio_header.folio_id.id)"/>
                            <t t-foreach="folio_items" t-as="item">
                                <tr>
                                    <td>
                                        <span t-esc="item.item_name"/>
                                    </td>
                                    <td>
                                        <span t-esc="item.item_description"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="item.first_date"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="item.total_debit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="item.total_credit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="item.total_balance"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <!-- Totals -->
                <div class="row" style="margin-top: 30px; border-top: 1px solid #000; padding-top: 10px;">
                    <div class="col-6">
                        <strong>Municipality Tax:</strong>
                        <span t-esc="folio_header.municipality_tax"/>
                        <br/>
                        <strong>VAT:</strong>
                        <span t-esc="folio_header.value_added_tax"/>
                    </div>
                    <div class="col-6 text-end">
                        <strong>Total Debit:</strong>
                        <span t-esc="folio_header.folio_total_debit"/>
                        <br/>
                        <strong>Total Credit:</strong>
                        <span t-esc="folio_header.folio_total_credit"/>
                        <br/>
                        <strong>Balance:</strong>
                        <span t-esc="folio_header.folio_balance"/>
                        <br/>
                        <h6>
                            <strong>Grand Total:</strong>
                            <span t-esc="folio_header.grand_total"/>
                        </h6>
                    </div>
                </div>

                <!-- Thank You -->
                <div class="row mt32">
                    <div class="col-12 text-center">
                        <p>
                            <strong>Thank you for your business!</strong>
                        </p>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>