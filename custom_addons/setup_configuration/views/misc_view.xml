                            <field name="due_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>

                    <!-- User Text with selection options -->
                    <group>
                        <field name="user_text" widget="selection"/>
                        <field name="user_id" widget="many2one"/>
                    </group>

                    <!-- Message field -->
                    <group>
                        <field name="message"/>
                    </group>

                    <!-- Recurring task and status checkboxes -->
                    <group>
                        <field name="recurring" widget="boolean"/>
                        <field name="status"/>
                    </group>

                    <!--                        &lt;!&ndash; Buttons for In Process, Resolved, Cancelled at bottom &ndash;&gt;-->
