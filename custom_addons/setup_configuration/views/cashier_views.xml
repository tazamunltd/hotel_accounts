        <field name="arch" type="xml">
            <form string="Department Code">
                <sheet>
                    <notebook>
                        <!-- Main Tab -->
                        <page string="Main">
                            <group>
                                <field name="department"/>
                                <field name="description"/>
                                <field name="abbreviation"/>
                                <field name="arabic_description"/>
                                <field name="arabic_abbreviation"/>
                                <field name="unit_price"/>
                                <field name="dept_category"/>
                                <field name="user_sort"/>
                            </group>
                            <group string="Function">
                                <field name="function_type"/>
                                <separator string="Charges"/>
                                <!-- <field name="charge_room"/>
                                <field name="charge_food"/>
                                <field name="charge_beverage"/>
                                <field name="charge_telephone"/>
                                <field name="charge_other"/>
                                
                                <separator string="Payments"/>
                                <field name="payment_cash"/>
                                <field name="payment_credit_card"/>
                                <field name="payment_other"/>

                                <separator string="Taxes"/>
                                <field name="tax_service_charge"/>
                                <field name="tax_vat"/>
                                <field name="tax_municipality"/>
                                <field name="tax_other"/> -->
                                <field name="charge_type" widget="radio"/> 
                            </group>
                        </page>

                        <!-- GI Accounts Tab -->
                        <!-- <page string="GI Accounts">
                            <group>
                                <field name="default_account_id"/>
                            </group>
                        </page> -->
                    </notebook>
                </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

