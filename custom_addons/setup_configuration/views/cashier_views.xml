    <record id="view_department_category_form" model="ir.ui.view">
    <field name="name">department.category.form</field>
    <field name="model">department.category</field>
    <field name="arch" type="xml">
        <form string="Department Category">
            <sheet>
                <group>
                    <field name="category"/>
                    <field name="description"/>
                </group>
                <group>
                    <field name="abbreviation"/>
                    <field name="user_sort"/>
                </group>
                <group>
                    <field name="arabic_description"/>
                    <field name="arabic_abbreviation"/>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
</record>

    <record id="view_department_category_tree" model="ir.ui.view">
        <field name="name">department.category.tree</field>
        <field name="model">department.category</field>
        <field name="arch" type="xml">
            <tree string="Department Category">
                <field name="category" optional='show'/>
                <field name="description" optional='show'/>
                <field name="abbreviation" optional='show'/>
                <field name="user_sort" optional='show'/>
            </tree>
        </field>
    </record>
    <record id="view_department_category_kanban" model="ir.ui.view">
        <field name="name">department.category.kanban</field>
        <field name="model">department.category</field>
        <field name="arch" type="xml">
            <kanban string="Department Category">
                <field name="category"/>
                <field name="description"/>
                <field name="abbreviation"/>
                <field name="user_sort"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <strong><field name="category"/></strong>
                            <div>Description: <field name="description"/></div>
                            <div>Abbreviation: <field name="abbreviation"/></div>
                            <div>User Sort: <field name="user_sort"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_department_category_pivot" model="ir.ui.view">
        <field name="name">department.category.pivot</field>
        <field name="model">department.category</field>
        <field name="arch" type="xml">
            <pivot string="Department Category">
                <field name="category" type="row"/>
                <field name="abbreviation" type="row"/>
                <!-- <field name="user_sort" type="measure"/> -->
            </pivot>
        </field>
    </record>
    <record id="view_department_category_graph" model="ir.ui.view">
        <field name="name">department.category.graph</field>
        <field name="model">department.category</field>
        <field name="arch" type="xml">
            <graph string="Department Category" type="bar">
                <field name="category" type="row"/>
                <field name="abbreviation" type="row"/>
                <!-- <field name="user_sort" type="measure"/> -->
            </graph>
        </field>
    </record>



    <record id="view_department_category_search" model="ir.ui.view">
        <field name="name">department.category.search</field>
        <field name="model">department.category</field>
        <field name="arch" type="xml">
            <search string="Search Department Categories">
                <field name="category" string="Category" />
                <field name="description" string="Description" />
                <field name="abbreviation" string="Abbreviation" />
                <field name="user_sort" string="User Sort" />
            </search>
        </field>
    </record>


    
    <!-- Form View for Department Code -->
