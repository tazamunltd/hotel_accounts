        <field name="res_model">additional.attribute</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for Template -->
    <record id="action_template" model="ir.actions.act_window">
        <field name="name">Templates</field>
        <field name="res_model">template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action for Comment Category -->
    <record id="action_comment_category" model="ir.actions.act_window">
