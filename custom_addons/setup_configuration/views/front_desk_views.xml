<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View for Room Type -->
    <record id="view_room_type_form" model="ir.ui.view">
        <field name="name">room.type.form</field>
        <field name="model">room.type</field>
        <field name="arch" type="xml">
            <form string="Room Type">
                <group>
                    <field name="room_type"/>
                    <field name="description"/>
                    <field name="abbreviation"/>
                    <field name="generic_type"/>
                    <field name="user_sort"/>
                    <field name="obsolete"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree View for Room Type -->
    <record id="view_room_type_tree" model="ir.ui.view">
        <field name="name">room.type.tree</field>
        <field name="model">room.type</field>
        <field name="arch" type="xml">
            <tree string="Room Types">
                <field name="room_type"/>
                <field name="description"/>
                <field name="abbreviation"/>
                <field name="generic_type"/>
                <field name="user_sort"/>
                <field name="obsolete"/>
            </tree>
        </field>
    </record>

    <record id="view_room_specification_form" model="ir.ui.view">
        <field name="name">room.specification.form</field>
        <field name="model">room.specification</field>
        <field name="arch" type="xml">
            <form string="Room Specification">
                <sheet>
                    <notebook>
                        <!-- Main Tab -->
                        <page string="Main">
                            <group>
                                <group>
                                    <field name="room_number"/>
                                    <field name="door_sign"/>
                                    <field name="room_type"/>
                                    <field name="suite"/>
                                    <field name="connected_room"/>
                                    <field name="type_of_bed"/>
                                    <field name="type_of_bath"/>
                                </group>
                                <group>
                                    <field name="obsolete"/>
                                    <field name="no_smoking"/>
                                    <field name="max_pax"/>
                                    <field name="section_hk"/>
                                    <field name="telephone_ext"/>
                                    <field name="disability_features"/>
                                    <field name="extra_features"/>
                                </group>
                                <group>
                                    <field name="rate_code"/>
                                    <field name="rate_posting_item"/>
                                </group>
                            </group>
                            <group>
                                <group string="Count in Statistics">
                                    <field name="count_in_statistics" widget="radio"/>
                                </group>
                                <group string="Count in Availability">
                                    <field name="count_in_availability" widget="radio"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Location">
                            <group>
                                <field name="floor"/>
                                <field name="block"/>
                                <field name="building"/>
                                <field name="user_sort"/>
                                <button string="Floor Plan" type="object" name="action_view_floor_plan"/>
                            </group>
                        </page>

                        <!-- Information Tab -->
                        <page string="Information">
                            <group>
                                <field name="pending_repairs"/>
                                <field name="last_repairs"/>
                                <field name="room_description"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

