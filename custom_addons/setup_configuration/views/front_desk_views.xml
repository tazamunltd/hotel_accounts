    <!-- Form View for Rentable Asset -->
    <record id="view_rentable_asset_form" model="ir.ui.view">
        <field name="name">rentable.asset.form</field>
        <field name="model">rentable.asset</field>
        <field name="arch" type="xml">
            <form string="Rentable Asset">
                <group>
                    <group>
                        <field name="code"/>
                        <field name="description"/>
                        <field name="abbreviation"/>
                        <field name="arabic_description"/>
                        <field name="arabic_abbreviation"/>
                        <field name="obsolete"/>
                    </group>
                    <group>
                        <field name="default_type"/>
                        <field name="rhythm"/>
                    </group>
                </group>

                <group>
                    <field name="create_as_with_guest"/>
                    <field name="use_as_default_rent_notes"/>
                    <field name="description" string="Description"/>
                </group>
                
                <!-- Quantity Information -->
                <group string="Quantity">
                    <field name="quantity_type"/>
                    <field name="default_quantity"/>
                    <field name="price"/>
                    <field name="posting_item"/>
                    <field name="free"/>
                </group>
                
                <!-- Return Check -->
                <group string="Return Check">
                    <field name="return_check"/>
                </group>
                
                <!-- Additional Options -->
                <group string="Options">
                    <field name="per_pax"/>
                    <field name="per_child"/>
                    <field name="per_infant"/>
                    <field name="extra_bed"/>
                </group>
                
                <field name="notes"/>
            </form>
        </field>
    </record>

