<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tz_view_manual_posting_tree" model="ir.ui.view">
        <field name="name">tz.manual.posting.tree</field>
        <field name="model">tz.manual.posting</field>
        <field name="arch" type="xml">
            <tree string="Manual Postings">
                <field name="name"/>
                <field name="item_id"/>
                <field name="description"/>
                <field name="voucher"/>
                <field name="room_list"/>
                <field name="quantity"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="tz_view_manual_posting_form" model="ir.ui.view">
        <field name="name">tz.manual.posting.form</field>
        <field name="model">tz.manual.posting</field>
        <field name="arch" type="xml">
            <form string="Manual Posting">
                <sheet>
                    <div class="row g-2">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card mb-2 shadow-sm">
                                <div class="card-header py-1 px-2">
                                    <i class="fa fa-file-powerpoint-o m-1"/>
                                    <span class="fw-bold">Posting Information</span>
                                </div>
                                <div class="card-body py-1 px-2">
                                    <div class="row g-2">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="name" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="name"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="company_id" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="company_id"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="date_shift" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="date_shift"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="item_id" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="item_id" options="{'no_create': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="item_description" class="form-label small"
                                                       invisible="item_id == False"/>
                                            </div>
                                            <div class="m-1">
                                                <field name="item_description" readonly="1"/>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="description" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="description"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label for="type" class="form-label small mb-2">Type</label>
                                            <div class="d-flex flex-row gap-3">  <!-- Makes radio buttons inline -->
                                                <field name="type" widget="radio" options="{'horizontal': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2" invisible="type != 'room'">
                                            <div class="form-group">
                                                <label for="room_list" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="room_list" options="{'no_create': True}"/>
                                                <field name="unavailable_room_ids" invisible="1"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2" invisible="type != 'group'">
                                            <div class="form-group">
                                                <label for="group_list" class="form-label small">Group</label>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="group_list" options="{'no_create': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="voucher" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="voucher"/>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="col-md-4" invisible="not room_list">
                                            <div class="form-group" invisible="not room_list">
                                                <label for="partner_id" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="partner_id"/>
                                            </div>
                                        </div>
                                        <div class="col-md-4" invisible="not room_list">
                                            <div class="form-group" invisible="not room_list">
                                                <label for="reference_contact_" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="reference_contact_"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card mb-2 shadow-sm">
                                <div class="card-header py-1 px-2">
                                    <i class="fa fa-calculator m-1"/>
                                    <span class="fw-bold">Financial Details</span>
                                </div>
                                <div class="card-body py-1 px-2">
                                    <div class="row g-2">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="price" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="price"/>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <div class="form-group">
                                                <label for="quantity" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="quantity"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="total" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="total" readonly="1"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="currency_id" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="currency_id" options="{'no_create': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="sign" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="sign" widget='radio' options="{'horizontal': True}"/>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="taxes" class="form-label small"/>
                                            </div>
                                            <div class="form-control form-control-sm">
                                                <field name="taxes"
                                                       placeholder="Enter Taxes"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter" style="margin-top: 20px;">
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tz_action_manual_posting" model="ir.actions.act_window">
        <field name="name">Manual Postings</field>
        <field name="res_model">tz.manual.posting</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new manual posting</p>
        </field>
    </record>

    <record id="view_posting_item_form_inherit" model="ir.ui.view">
        <field name="name">posting.item.form.inherit</field>
        <field name="model">posting.item</field>
        <field name="inherit_id" ref="setup_configuration.view_posting_item_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='taxes']/parent::div" position="before">
                <div class="col-md-2">
                    <div class="form-group">
                        <label for="sign" class="form-label small"/>
                    </div>
                    <div class="form-control form-control-sm">
                        <field name="sign" widget='radio' options="{'horizontal': True}"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_manual_posting" name="Manual Postings" parent="menu_fd_root"
              action="tz_action_manual_posting" sequence="3"/>
</odoo>