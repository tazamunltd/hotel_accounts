        <record id="view_tz_house_keeping_tree" model="ir.ui.view">
            <field name="name">tz.house.keeping.tree</field>
            <field name="model">tz.house.keeping</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="room_id"/>
                    <field name="room_type_id"/>
                    <field name="room_status"/>
                    <field name="is_clean"/>
                    <field name="out_of_service"/>
                    <field name="create_date"/>
                    <header>
                        <button
                                name="action_mark_clean"
                                string="Mark as Clean"
                                type="object"
                                class="oe_highlight"
                                icon="fa-check"/>

                        <button
                                name="action_mark_out_of_service"
                                string="Mark Out of Service"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-wrench"/>

                    </header>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_tz_house_keeping_form" model="ir.ui.view">
            <field name="name">tz.house.keeping.form</field>
            <field name="model">tz.house.keeping</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <hr/>
                        <!--<div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>-->

                        <group>
                            <group>
                                <field name="room_id"/>
                                <field name="room_type_id"/>
                                <field name="fsm_location"/>
                                <field name="block"/>
                                <field name="building"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="room_status"/>
                                <field name="is_clean"/>
                                <field name="out_of_service"/>

                                <!-- Odoo 17 way to handle conditional visibility -->
                                <div invisible="not out_of_service">
                                    <field name="repair_ends_by"/>
                                    <field name="reason"/>
                                </div>
                            </group>
                        </group>

                        <notebook>
                            <page string="Guest Details">
                                <group>
                                    <field name="adult_count"/>
                                    <field name="child_count"/>
                                    <field name="infant_count"/>
                                </group>
                            </page>
                            <page string="Pending Repairs">
                                <field name="pending_repairs"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_tz_house_keeping_search" model="ir.ui.view">
            <field name="name">tz.house.keeping.search</field>
            <field name="model">tz.house.keeping</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="room_id"/>
                    <field name="room_type_id"/>
                    <field name="fsm_location"/>
                    <field name="room_status"/>
                    <filter string="Clean Rooms" name="clean" domain="[('is_clean', '=', True)]"/>
                    <filter string="Out of Service" name="out_of_service" domain="[('out_of_service', '=', True)]"/>
                    <filter string="Today's Records" name="today"
                            domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                    <group expand="1" string="Group By">
                        <filter string="Room Type" name="room_type" context="{'group_by': 'room_type_id'}"/>
                        <filter string="Location" name="location" context="{'group_by': 'fsm_location'}"/>
                        <filter string="Status" name="status" context="{'group_by': 'room_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Window Action -->
        <record id="action_tz_house_keeping" model="ir.actions.act_window">
            <field name="name">House Keeping</field>
            <field name="res_model">tz.house.keeping</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first House Keeping record
                </p>
            </field>
        </record>

        <!-- Submenu -->
        <menuitem id="menu_tz_house_keeping_main" name="House Keeping" parent="menu_cashier_parent"
                  action="action_tz_house_keeping" sequence="10"/>

    </data>
</odoo>