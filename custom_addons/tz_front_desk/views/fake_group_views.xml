<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_dummy_group_tree" model="ir.ui.view">
        <field name="name">dummy.group.tree</field>
        <field name="model">group.booking</field>
        <field name="arch" type="xml">
            <tree string="Dummy Groups">
                <field name="name"/>
                <field name="description"/>
                <field name="discount"/>
                <field name="reopen" widget="boolean_button"/>
                <field name="has_master_folio" widget="boolean_button"/>
                <field name="is_fake" widget="boolean_button"/>
                <field name="obsolete" widget="boolean_button"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_dummy_group_form" model="ir.ui.view">
        <field name="name">dummy.group.form</field>
        <field name="model">group.booking</field>
        <field name="arch" type="xml">
            <form string="Dummy Group">
                <header>
                    <!-- You can add a statusbar here if your model has states -->
                </header>
                <sheet>
                    <div class="row g-2">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="card mb-2 shadow-sm">
                                <div class="card-header py-1 px-2">
                                    <i class="fa fa-users m-1"/>
                                    <span class="fw-bold">Dummy Group Information</span>
                                </div>
                                <div class="card-body py-1 px-2">
                                    <div class="row g-2">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="name" class="form-label small"/>
                                                <field name="name" class="form-control form-control-sm"/>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="discount" class="form-label small"/>
                                                <field name="discount" class="form-control form-control-sm"/>
                                            </div>
                                        </div>

                                       <!-- <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="has_master_folio" class="o_form_label"/>
                                                <field name="has_master_folio" widget="boolean_button"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="is_fake"  class="o_form_label"/>
                                                <field name="is_fake" widget="boolean_button"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="obsolete"  class="o_form_label"/>
                                                <field name="obsolete" widget="boolean_button"/>
                                            </div>
                                        </div>-->
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="description" class="form-label small"/>
                                                <field name="description" class="form-control form-control-sm"/>
                                            </div>
                                        </div>
                                        <hr/>
                                         <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="reopen" class="o_form_label"/>
                                                <field name="reopen" widget="boolean_button"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dummy_group_search" model="ir.ui.view">
        <field name="name">dummy.group.search</field>
        <field name="model">group.booking</field>
        <field name="arch" type="xml">
            <search string="Dummy Group Search">
                <field name="name" string="Name"/>
                <field name="description" string="Description"/>
                <field name="is_fake" string="Is Fake"/>
                <field name="obsolete" string="Obsolete"/>
                <separator/>
                <filter string="Active" name="active" domain="[('obsolete', '=', False)]"/>
                <filter string="Obsolete" name="obsolete" domain="[('obsolete', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dummy_group" model="ir.actions.act_window">
    <field name="name">Dummy Groups</field>
    <field name="res_model">group.booking</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('is_fake', '=', True)]</field>
</record>

    <!-- Menu Items -->
    <menuitem id="menu_dummy_group" name="Dummy Groups" parent="menu_cashier_parent"
              action="action_dummy_group" sequence="7"/>
</odoo>