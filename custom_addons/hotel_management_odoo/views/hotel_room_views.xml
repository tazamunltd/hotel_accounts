<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--    Hotel Room tree view-->
    <record id="hotel_room_view_tree" model="ir.ui.view">
        <field name="name">hotel.room.view.tree</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Room Name"/>
                <field name="room_type_name" string="Room Type"/>
                <!-- <field name="room_type"/> -->
                <field name="floor_id"/>
                <field name="list_price"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="hotel_room_search_view" model="ir.ui.view">
        <field name="name">hotel.room.search</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Room Name"/>
                <field name="room_type_name" string="Room Type"/>
                <filter name="room_type_filter"
                        string="Room Type"
                        domain="[('room_type_name', '!=', False)]"/>
            </search>
        </field>
    </record>
    <!--    Hotel Room form view-->
    <record id="hotel_room_view_form" model="ir.ui.view">
        <field name="name">hotel.room.view.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form string="Hotel Room">
                <header>
                    <field name="status" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <field name="room_image" widget="image"
                           class="oe_avatar"
                           options="{'preview_image': 'room_image'}"/>

                    <div class="oe_title">
                        <label for="name" string="Room Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
<!--                            <label for="hotel_id" string="Hotel"/>-->
                            <field name="company_id"/>
                        </h2>
                        <h2>
                            <field name="is_room_avail" invisible="1"/>
                        </h2>
                    </div>
                    <notebook>
                        <page name="information_hotel_room"
                              string="Information">
                            <group>
                                <group>
                                    <field name="user_id" select="2"
                                           string="Room Manager"/>
                                    <field name="taxes_ids"
                                           widget="many2many_tags"
                                           string="Customer Taxes"/>
                                    <field name="floor_id" string="Floor"/>
                                    <field name="door_sign"/>
                                    <field name="suite"/>
                                    <field name="connected_room"/>
                                    <field name="type_of_bed"/>
                                    <field name="type_of_bath"/>
                                </group>
                                <group>
                                    <field name="obsolete"/>
                                    <field name="no_smoking"/>
                                    <!-- <field name="max_pax"/> -->
                                    <field name="section_hk"/>
                                    <field name="telephone_ext"/>
                                    <field name="disability_features"/>
                                    <field name="extra_features"/>
                                    <field name="housekeeping_staff_status"/>
                                    <field name="maintenance_status"/>
                                    <field name="housekeeping_status"/>
                                </group>
                                <group>
                                    <field name="rate_code"/>
                                    <field name="rate_posting_item"/>
                                </group>
                                <group>
                                    <field name="room_type_name"/>
                                    <field name="list_price" widget="monetary"
                                           string="Rent"/>
                                    <field name="num_person"/>
                                    <field name="uom_id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Location">
                            <group>
                                <group>
                                    <!-- <field name="block"/>
                                    <field name="building"/>
                                    <field name="user_sort"/> -->
                                    <field name="fsm_location"/>
                                    <!-- <button string="Floor Plan" type="object" name="action_view_floor_plan"/> -->
                                </group>
                            </group>

                        </page>
                        <page string="Amenities">
                            <group>
                                <field name="room_amenities_ids"
                                       widget="many2many_tags"
                                       string="Room Amenities"/>
                            </group>
                        </page>
                        <page string="Descriptions">
                            <separator string="Description"/>
                            <field name="description" colspan="4" nolabel="1"/>
                        </page>
                        <page string="Repairs">
                            <group>
                                <field name="pending_repairs"/>
                                <field name="last_repairs"/>
                                <field name="room_description"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!--    Hotel Room menu action-->
    <record id="hotel_room_action" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_room_avail':True}</field>
    </record>
    <!--Room Menu-->
    <!-- <menuitem id="hotel_room_menu"
              name="Room"
              action="hotel_room_action"
              parent="hotel_config_menu"
              sequence="20"/> -->


    <menuitem id="hotel_codes"
              name="Codes"
              parent="hotel_config_menu" sequence="1"/>

    <menuitem id="sub_menu_rate_code" 
              name="Rate Code" 
              parent="hotel_codes"
              action="setup_configuration.action_rate_code"
              sequence="1"
              />
    

    <menuitem id="sub_menu_rate_promotion" 
              name="Rate Promotions" 
              parent="hotel_codes"
              action="setup_configuration.action_rate_promotion"
              sequence="2"
              /> 

    <menuitem id="hotel_room_menu"
              name="Room"
              action="hotel_room_action"
              parent="hotel_codes"
              sequence="3"/>

    <menuitem id="sub_menu_meal_codes" 
              name="Meal Codes" 
              parent="hotel_codes"
              action="setup_configuration.action_meal_code"
              sequence="4"
              />

    <menuitem id="sub_menu_telephone_extension" 
              name="Telephone Extension" 
              parent="hotel_codes"
              action="setup_configuration.action_telephone_extension"
              sequence="5"
              />

    <menuitem id="sub_menu_department_codes" 
              name="Department Codes" 
              parent="hotel_codes"
              action="setup_configuration.action_department_code"
              sequence="6"
              />

    <menuitem id="sub_menu_posting_items" 
              name="Posting Items" 
              parent="hotel_codes"
              action="setup_configuration.action_posting_item"
              sequence="7"
              />

    <menuitem id="sub_menu_dummy_room_codes" 
              name="Dummy Room Codes" 
              parent="hotel_codes"
              action="setup_configuration.action_dummy_room_code"
              sequence="8"
              />


    <menuitem id="sub_menu_budget_entries" 
              name="Budget Entries" 
              parent="hotel_codes"
              action="setup_configuration.action_budget_entry"
              sequence="9"
              />

    <menuitem id="sub_menu_cash_box_codes" 
              name="Cash Box Codes" 
              parent="hotel_codes"
              action="setup_configuration.action_cash_box_code"
              sequence="10"
              />
        
</odoo>
