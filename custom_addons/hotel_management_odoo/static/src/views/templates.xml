<templates>
    <t t-name="hotel_management_odoo.RoomResultDashBoard">
        <div class="dashboard-container p-3 bg-white border">
            <div class="row g-2">
                <div class="col-md-4">
                    <div class="form-group mb-2">
                        <label for="startDate" class="form-label small">From Date</label>
                        <input
                            type="date"
                            id="startDate"
                            class="form-control form-control-sm"
                            t-model="state.startDate"
                        />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group mb-2">
                        <label for="endDate" class="form-label small">To Date</label>
                        <input
                            type="date"
                            id="endDate"
                            class="form-control form-control-sm"
                            t-model="state.endDate"
                        />
                    </div>
                </div>

                <div class="col-md-4 d-flex justify-content-end">
                    <button
                        class="btn btn-primary btn-sm"
                        t-on-click="onApplyFilter"
                    >
                        Apply Filter
                    </button>
                </div>
            </div>

        </div>
    </t>
</templates>